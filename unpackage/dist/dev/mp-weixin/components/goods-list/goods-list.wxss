.goods-list-box {
  width: 100%;
  margin-top: 16rpx;
  background: #fff;
}
.goods-list-box .goods-list-title {
  padding: 40rpx 0;
}
.goods-list-box .goods-list-title text {
  display: block;
  position: relative;
  width: 176rpx;
  height: 48rpx;
  margin: auto;
  text-align: center;
  line-height: 48rpx;
  color: #fff;
  font-size: 32rpx;
  background: #E63948;
  border-radius: 56rpx;
  font-style: oblique;
}
.goods-list-box .goods-list-title text::after,
.goods-list-box .goods-list-title text::before {
  position: absolute;
  top: 0;
  bottom: 0;
  margin: auto;
  content: '';
  width: 12rpx;
  height: 12rpx;
  background: #E63948;
  border-radius: 50%;
}
.goods-list-box .goods-list-title text::after {
  left: -18rpx;
}
.goods-list-box .goods-list-title text::before {
  right: -18rpx;
}
.goods-list-box .goods-list-box {
  width: 100%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-flex-wrap: wrap;
          flex-wrap: wrap;
  overflow: hidden;
  padding: 0 32rpx 20rpx;
  box-sizing: border-box;
}
.goods-list-box .goods-list-box .goods-list-view {
  width: 331rpx;
  height: 100%;
  margin-left: 22rpx;
}
.goods-list-box .goods-list-box .goods-list-view .goods-li {
  padding: 0 0 29rpx;
  box-sizing: border-box;
  width: 331rpx;
  height: 448rpx;
  margin-bottom: 24rpx;
  border-radius: 12rpx;
  box-shadow: 0px 5px 14px 0px rgba(29, 29, 38, 0.08);
}
.goods-list-box .goods-list-box .goods-list-view .goods-li .goods-img {
  width: 100%;
  height: 260rpx;
  overflow: hidden;
}
.goods-list-box .goods-list-box .goods-list-view .goods-li .goods-img image {
  width: 100%;
  height: 100%;
  border-radius: 12rpx 12rpx 0 0;
}
.goods-list-box .goods-list-box .goods-list-view .goods-li .goods-bottom {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: justify;
